{% extends 'mmpRjpBundle::layoutAdmin.html.twig' %}

{% block headline %}
    Lista wydarzeń
{% endblock %}

{% block content_row %}
    <a href="{{ path('mmp_rjp_admin_meeting_add') }}">Dodaj</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Kiedy</th>
            <th>Gdzie</th>
            <th>Opcje</th>
        </tr>
        </thead>
        {% for meeting in meetings %}
            <tr>
                <td>{{ meeting.id }}</td>
                <td>{{ meeting.date.format('d.m.Y H:i') }}</td>
                <td>{{ meeting.place }}, {{ meeting.district.name }}</td>
                <td>
                    <a href="{{ path('mmp_rjp_admin_meeting_edit', {'id' : meeting.id}) }}">Edytuj</a>
                    <a href="{{ path('mmp_rjp_admin_meeting_delete', {'id' : meeting.id}) }}">Usuń</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}