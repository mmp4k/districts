{% extends 'mmpRjpBundle::layout.html.twig' %}
{% set activePage = 'elections' %}

{% block container %}
<div class="container entry meetings">
    <div class="row">
        <div class="col-sm-12">
            <div class="white padding">
                <div class="row" role="tabpanel">
                    <div class="col-sm-3">
                        <ul class="nav nav-pills nav-stacked" role="tablist">
                            {% for election in elections %}
                            <li class="{% if loop.first %}active{% endif %}" role="election-{{ election.id }}">
                                <a href="#election-{{ election.id }}" aria-controls="election-{{ election.id }}" role="tab" data-toggle="tab">
                                   {{ election.date | localizeddate('full', 'none', null, null, 'd MMMM Y') }}
                                   <span class="badge" style="float:right;">
                                    {{ election.districts|length }}
                                   </span>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-sm-9">
                        <div class="tab-content">
                            {% for election in elections %}
                            <div role="tabpanel" class="tab-pane {% if loop.first %}active{% endif %}" id="election-{{ election.id }}">
                                <ul class="nav nav-tabs nav-condensed" role="tablist">                            
                                    {% for district in election.districts %}
                                    <li role="presentation" {% if loop.first %}class="active"{% endif %}>
                                        <a href="#el{{ district.id }}" aria-controls="el{{ district.id }}" role="tab" data-toggle="tab">
                                            {{ district.name }}
                                        </a>                                   
                                    </li>
                                    {% endfor %}
                                </ul>      
                                <div class="tab-content">
                                    {% for district in election.districts %}
                                    <div role="tabpanel" class="tab-pane {% if loop.first %}active{% endif %}" id="el{{ district.id }}">
                                        <table class="table table-striped table-condensed">
                                            <thead>
                                                <tr>
                                                    <th>Lp</th>
                                                    <th>Imię</th>
                                                    <th>Nazwisko</th>
                                                    <th>Liczba głosów</th>
                                                    <th>Radny</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for candidate in district.getCandidatesOnElection(election) %}
                                                    <tr {% if candidate.isCouncilor %}class="success"{% endif %}>
                                                        <td>{{ loop.index }}</td>
                                                        <td>{{ candidate.user.firstName }}</td>
                                                        <td>{{ candidate.user.lastName }}</td>
                                                        <td>{{ candidate.votes }}</td>
                                                        <td>{% if candidate.isCouncilor %}TAK{% else %}NIE{% endif %}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}